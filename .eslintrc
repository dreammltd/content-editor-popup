{
  "parser"  : "babel-eslint",
  "extends" : [
    "standard",
    "standard-react"
  ],
  "plugins" : [
    "flow-vars"
  ],
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "Action"       : false,
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__DEBUG_NEW_WINDOW__" : false,
    "__BASENAME__" : false
  },
  "rules": {
    "semi" : [2, "always"],
    "space-infix-ops": 0,
    "max-len": [2, 120, 2],
	"flow-vars/define-flow-type": 0,
	"flow-vars/use-flow-type": 0,
	"indent": [
	  2,
	  "tab"
	],
	"react/jsx-indent-props": [
	  0,
	  "tab"
	],
	"react/jsx-indent": [
	  0,
	  "tab"
	],
	"no-mixed-spaces-and-tabs": [
	  0,
	  "smart-tabs"
	],
	"no-multiple-empty-lines": 0,
	"space-before-function-paren": 0,

  }
}
